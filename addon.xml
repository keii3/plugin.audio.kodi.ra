<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.kodi.ra"
       name="KodiRa"
       version="5.1"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup4" version="4.3.1"/>
    <import addon="script.module.pil" version="1.1.7"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.service" library="service.py"/>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">KodiRa</summary>
    <summary lang="ja">KodiRa</summary>
    <description lang="en">Listen to NHK Radio, Commercial Radio (radiko.jp) and others</description>
    <description lang="ja">NHKラジオ, 民放ラジオ(radiko.jp)ほかを聴くことができます</description>
    <disclaimer lang="en">Works on Windows &amp; macOS</disclaimer>
    <disclaimer lang="ja">WindowsとmacOSで動作。</disclaimer>
    <website>http://kodiful.com/</website>
  </extension>
</addon>
