<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.kodira"
       name="KodiRa"
       version="1.0"
       provider-name="kodiful">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup4" version="4.3.1"/>
    <import addon="script.module.pil" version="1.1.7"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">KodiRa</summary>
    <summary lang="ja">KodiRa</summary>
    <description lang="en">Listen to NHK Radio, Commercial Radio (radiko.jp) and Community SimulRadio (CSRA.fm)</description>
    <description lang="ja">NHKラジオ, 民放ラジオ(radiko.jp), コミュニティサイマルラジオ(CSRA.fm)を聴く</description>
    <disclaimer lang="en">Works on Windows &amp; MacOSX</disclaimer>
    <disclaimer lang="ja">WindowsとMacOSXで動作</disclaimer>
  </extension>
</addon>
